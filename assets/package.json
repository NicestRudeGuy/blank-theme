{
	"name": "blank-theme",
	"version": "2.0.0",
	"description": "Blank Theme Packages",
	"author": "rtCamp",
	"license": "MIT",
	"private": true,
	"scripts": {
		"prod": "cross-env NODE_ENV=production webpack --mode production --progress && npm run pot",
		"dev": "cross-env NODE_ENV=development webpack --watch --mode development --progress",
		"styleguide:build": "node ./style-guide/extract.js",
		"clean": "rm -rf build/*",
		"init": "./bin/init.js && npm run pot && rm -rf ../.git ../.github ./bin/ ../languages/blank-theme.pot && npm uninstall replace-in-file prompt-sync",
		"lint-css": "stylelint src/sass/**/*.scss --syntax scss",
		"lint-js": "eslint src/js/",
		"pot": "wp-pot --src '../**/*.php' --dest-file '../languages/blank-theme.pot' --domain 'blank-theme' --package 'Blank Theme' ",
		"precommit": "npm run lint-css && npm run lint-js && npm run pot",
		"test": "jest  --verbose"
	},
	"dependencies": {
		"webfontloader": "^1.6.28"
	},
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/preset-env": "^7.1.0",
		"autoprefixer": "^9.1.5",
		"babel-loader": "^8.0.4",
		"clean-webpack-plugin": "^0.1.19",
		"cross-env": "^5.2.0",
		"css-loader": "^1.0.0",
		"css-mqpacker": "^7.0.0",
		"cssnano": "^4.1.4",
		"eslint": "^5.6.1",
		"eslint-config-wordpress": "^2.0.0",
		"eslint-loader": "^2.1.1",
		"file-loader": "^2.0.0",
		"foundation-sites": "^6.5.0-rc.3",
		"jest": "^24.7.1",
		"mini-css-extract-plugin": "^0.4.3",
		"node-sass": "^4.13.1",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"postcss-assets": "^5.0.0",
		"postcss-loader": "^3.0.0",
		"postcss-pxtorem": "^4.0.1",
		"postcss-scss": "^2.0.0",
		"prompt-sync": "^4.1.6",
		"replace-in-file": "^3.4.4",
		"sass-extract": "^2.1.0",
		"sass-loader": "^7.1.0",
		"serialize-javascript": "^2.1.2",
		"style-loader": "^0.23.1",
		"stylelint": "^9.6.0",
		"stylelint-config-wordpress": "^13.1.0",
		"stylelint-webpack-plugin": "^0.10.5",
		"uglifyjs-webpack-plugin": "^2.0.1",
		"webpack": "^4.20.2",
		"webpack-cli": "^3.1.2",
		"wp-pot-cli": "^1.2.1"
	},
	"browserslist": [
		"defaults"
	],
	"jest": {
		"testPathIgnorePatterns": [
			"<rootDir>/node_modules/"
		],
		"coverageDirectory": "<rootDir>/.jest-coverage/",
		"setupFilesAfterEnv": [
			"<rootDir>/test.setup.js"
		],
		"automock": false
	}
}
